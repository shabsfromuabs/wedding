    .col-md-8
      .calendar
        .presentation.day-presentation
          .current-day
            ' Субота
            br
            ' 23 липня
          .sub-heading Розкллад
          .point
            .time 16:00
            .text
              span Фуршет, фото-зона для гостей
          .point
            .time 16:30
            .text
              span Урочиста весільна церемонія
          .point
            .time 17:00
            .text
              span Святковий банкет
        .presentation.month-presentation.hidden-xs
          .year 2016
          .months-wrap
            - %w[січ лют бер кві тра чер лип сер вер жов лис гру].each do |month|
              .month class="#{'current' if month == 'лип'}" = month
          .weeks-days-wrap
            - %w[пн вт ср чт пт сб нд].map do |week_day|
              .week-day = week_day
          .days-wrap
            - (Date.new(2016, 06, 27)..Date.new(2016, 07, 31)).map do |date|
              .day class="#{'inactive' if date.month != 7} #{'current' if date.day == 23}" = date.day

